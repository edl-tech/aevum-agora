---
const { title = "Aevum Agora", description = "" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body style="font-family: sans-serif; line-height: 1.6; padding: 1rem; max-width: 1000px; margin: auto;">
    <header style="text-align: center; margin-bottom: 2rem;">
      <h1><a href="/" style="text-decoration: none; color: black;">Aevum Agora</a></h1>
    </header>

    <main>
      <slot />
    </main>

    <footer style="margin-top: 4rem; text-align: center; font-size: 0.9rem;">
      <p>© {new Date().getFullYear()} Aevum Agora — Built with ❤️ using Astro</p>
    </footer>
  </body>
</html>
